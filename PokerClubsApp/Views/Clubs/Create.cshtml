@using PokerClubsApp.Web.ViewModels.Clubs

@model AddClubModel;

@{
    ViewBag.Title = "Create Club";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Create" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Name" class="form-label-add-edit fw-bold">Club Name</label>
                <input asp-for="@Model.Name" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.UnionId" class="form-label-add-edit fw-bold">Union Name</label>
                <select asp-for="@Model.UnionId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Unions, "Id", "Name"))">
                    <option value="">Select Union...</option>
                </select>
                <span asp-validation-for="@Model.UnionId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary btn-dark-text mb-2 w-100 py-3 fw-bold rounded" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


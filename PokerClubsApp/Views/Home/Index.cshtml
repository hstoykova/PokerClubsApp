@{
	ViewData["Title"] = "Home Page";
}

<div class="btn d-block float-end" role="group" aria-label="Second group">
	@if (User?.Identity?.IsAuthenticated ?? false)
	{
		@if (User.IsInRole("Admin"))
		{
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
					Results
				</button>
				<ul class="dropdown-menu">
					<li><a class="dropdown-item" asp-controller="GameResults" asp-action="Create">Add new</a></li>
					<li><a class="dropdown-item" asp-controller="GameResults" asp-action="Index">View all</a></li>
				</ul>
			</div>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-info dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
					Invitations
				</button>
				<ul class="dropdown-menu">
					<li><a class="dropdown-item" asp-controller="Invitations" asp-action="Admin">Admin</a></li>
					<li><a class="dropdown-item" asp-controller="Invitations" asp-action="Player">Player</a></li>
				</ul>
			</div>
			<a class="btn btn-info" asp-controller="Unions" asp-action="Index">Unions</a>
			<a class="btn btn-info" asp-controller="Clubs" asp-action="Index">Clubs</a>
		}
		else if (User.IsInRole("Player"))
		{
			<a class="btn btn-info" asp-controller="GameResults" asp-action="Index">Results</a>
		}
	}
</div>
<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
	<div class="carousel-inner">
		<div class="carousel-item active">
			<img class="d-block w-100" src="/images/PokerPicture01.jpg" alt="First slide">
		</div>
	</div>
</div>
